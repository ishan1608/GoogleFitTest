<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/features_list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/feature_image"
        android:layout_width="@dimen/feature_size"
        android:layout_height="@dimen/feature_size"
        android:src="@drawable/common_ic_googleplayservices"/>
    <TextView
        android:id="@+id/feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option"
        android:textSize="@dimen/feature_size"/>

</LinearLayout>