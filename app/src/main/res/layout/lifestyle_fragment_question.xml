                        android:id="@+id/lifestyle_radio_group2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/lifestyle_option2_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="I LOVE LIFE!"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />

                        <RadioButton
                            android:id="@+id/lifestyle_option2_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Life sucks!"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />


                    </RadioGroup>
                    <Button
                        android:id="@+id/lifestyle_radio_submit_group2"
