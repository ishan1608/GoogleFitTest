                android:background="#ff7ded7e"
                android:id="@+id/lifestyle_question_set3"
                style="@style/event_details_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="Question set3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    style="@style/event_details_heading_text" />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                style="@style/event_details_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
