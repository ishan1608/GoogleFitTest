                        android:text="Question 2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <TextView
                    android:id="@+id/lifestyle_question2_content"
                    android:text="Are you happy?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/event_details_content" />
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/lifestyle_option2_heading"
