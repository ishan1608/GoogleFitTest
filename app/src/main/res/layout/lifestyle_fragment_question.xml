                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/lifestyle_question1_heading"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Question 1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <TextView
                    android:id="@+id/lifestyle_question1_content"
                    android:text="How often do you get takeout?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="10dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/lifestyle_options1_heading"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="Options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/lifestyle_option1_content"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">

                    <RadioGroup
                        android:id="@+id/lifestyle_radio_group1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/lifestyle_option1_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Almost never (once a year)"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#669900"
                            />
                        <RadioButton
                            android:id="@+id/lifestyle_option1_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A LOT(once a day)"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#669900"
                            />
                        <RadioButton
                            android:id="@+id/lifestyle_option1_radio3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quite often (once a week)"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#669900"
                            />

                    </RadioGroup>
                    <Button
                        android:id="@+id/lifestyle_radio_submit_group1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="submit"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#669900"
                        />

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/lifestyle_question2_heading"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
