                    android:id="@+id/lifestyle_option5_content"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <RadioGroup
                        android:id="@+id/lifestyle_radio_group5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/lifestyle_option5_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TV is my life"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
