                    android:id="@+id/option7_heading"
                    android:background="#ff7ded7e"
                    android:orientation="vertical"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
