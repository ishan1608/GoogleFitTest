                </LinearLayout>
                <TextView
                    android:id="@+id/question5_content"
                    android:text="Do you walk?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/event_details_content" />
                <LinearLayout
                    android:id="@+id/option5_heading"
                    android:background="#ff7ded7e"
                    android:orientation="vertical"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="Options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/option5_content"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <RadioGroup
                        android:id="@+id/health_radio_group5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/health_option5_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yes"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />
                        <RadioButton
                            android:id="@+id/health_option5_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />

                    </RadioGroup>
                    <Button
                        android:id="@+id/radio_submit_group5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="submit"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#ffadc019"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/question6_heading"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="Question 6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <TextView
                    android:id="@+id/question6_content"
                    android:text="How much sleep do you usually get?"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/event_details_content" />
                <LinearLayout
                    android:id="@+id/option6_heading"
                    android:background="#ff7ded7e"
                    android:orientation="vertical"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="Options"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        style="@style/event_details_heading_text" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/option6_content"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content">
                    <RadioGroup
                        android:id="@+id/health_radio_group6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <RadioButton
                            android:id="@+id/health_option6_radio1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Less than 6-8 hours"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />
                        <RadioButton
                            android:id="@+id/health_option6_radio2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="More than 6-8 hours"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />
                        <RadioButton
                            android:id="@+id/health_option6_radio3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6 -8hours"
                            android:textSize="15sp"
                            android:textStyle="italic"
                            android:textColor="#ffadc019"
                            />


                    </RadioGroup>
                    <Button
                        android:id="@+id/radio_submit_group6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="submit"
                        android:textSize="15sp"
                        android:textStyle="italic"
                        android:textColor="#ffadc019"
                        />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="#ff7ded7e"
                    android:id="@+id/question7_heading"
                    style="@style/event_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >
                    <TextView
                        android:text="Question 7"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
